<Window x:Class="Vitruvius.Views.Gesture.DecodingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="Recognize" Height="185" Width="200" WindowStartupLocation="CenterScreen">
    <Grid Height="115" Width="150">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <TextBlock Name="recordStatusTextBlock" Grid.Row="0" Grid.Column="0">Idle</TextBlock>

        <Grid Grid.Row="1" Grid.Column="0" >
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Name="startButton" Grid.Row="0" Grid.Column="0" Margin="5" IsEnabled="True"
                    Click="startButton_Click">Start</Button>
            <Button Name="stopButton" Grid.Row="0" Grid.Column="1" Margin="5" IsEnabled="False"
                    Click="stopButton_Click">Stop</Button>
        </Grid>
    </Grid>
</Window>
